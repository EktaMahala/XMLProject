@page
@model GroceryStores.Pages.Surveys.CreatePageModel
@{
    ViewData["Title"] = "CreatePage";
}

<h2>Please fill the Survey!!</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="surveyList.firstName" class="control-label"></label>
                <input asp-for="surveyList.firstName" class="form-control" />
                <span asp-validation-for="surveyList.firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="surveyList.lastName" class="control-label"></label>
                <input asp-for="surveyList.lastName" class="form-control" />
                <span asp-validation-for="surveyList.lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="surveyList.mobile" class="control-label"></label>
                <input asp-for="surveyList.mobile" class="form-control" />
                <span asp-validation-for="surveyList.mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="surveyList.email" class="control-label"></label>
                <input asp-for="surveyList.email" class="form-control" />
                <span asp-validation-for="surveyList.email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="surveyList.zip" class="control-label"></label>
                <input asp-for="surveyList.zip" class="form-control" />
                <span asp-validation-for="surveyList.zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="surveyList.stores" class="control-label"></label>
                <input asp-for="surveyList.stores" class="form-control" />
                <span asp-validation-for="surveyList.stores" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

